@model PayInc_Customer_web.Areas.Recharge.Models.DTHPlanResp

@if (Model != null)
{
    if (Model.records != null)
    {
        if (Model.records.Count > 0)
        {
            <div class="row">
                <div class="col-lg-12 col-md-12  col-sm-12">
                    <div class="form-group">
                        <label>Customer Name</label>
                        <label id="lblCustName" class="form-control form-control-solid">@Model.records[0].customerName</label>
                    </div>
                    <div class="form-group">
                        <label>Balance</label>
                        <label id="lblCustName" class="form-control form-control-solid">@Model.records[0].Balance</label>
                    </div>
                    <div class="form-group">
                        <label>Monthly Recharge Amount</label>
                        <label id="lblCustName" class="form-control form-control-solid">@Model.records[0].MonthlyRecharge</label>
                    </div>
                    <div class="form-group">
                        <label>Plan Name</label>
                        <textarea class="form-control form-control-solid" readonly>@Model.records[0].planname</textarea>
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <div class="row">
        <div class="col-lg-12 col-md-12  col-sm-12">
            <div class="form-group">
                <label>Operator Name</label>
                <label id="lblCustName" class="form-control form-control-solid">@ViewData["OperatorName"]</label>
            </div>
            <div class="form-group">
                <label>Account No</label>
                <label id="lblCustName" class="form-control form-control-solid">@ViewData["AccountNo"]</label>
            </div>
        </div>
    </div>
}
@model PayInc_Customer_web.Areas.Reports.Models.AEPSTransactionModel
@{
    ViewData["Title"] = "AEPS Transaction Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form class="form" method="post">
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">
                    AEPS Transaction Report
                </h3>
            </div>
            <div class="card-toolbar">
                <!--begin::Dropdown-->
                <div class="dropdown dropdown-inline mr-2">
                    <button type="button" class="btn btn-light-primary font-weight-bolder dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="svg-icon svg-icon-md">
                            <!--begin::Svg Icon | path:assets/media/svg/icons/Design/PenAndRuller.svg-->
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <rect x="0" y="0" width="24" height="24" />
                                    <path d="M3,16 L5,16 C5.55228475,16 6,15.5522847 6,15 C6,14.4477153 5.55228475,14 5,14 L3,14 L3,12 L5,12 C5.55228475,12 6,11.5522847 6,11 C6,10.4477153 5.55228475,10 5,10 L3,10 L3,8 L5,8 C5.55228475,8 6,7.55228475 6,7 C6,6.44771525 5.55228475,6 5,6 L3,6 L3,4 C3,3.44771525 3.44771525,3 4,3 L10,3 C10.5522847,3 11,3.44771525 11,4 L11,19 C11,19.5522847 10.5522847,20 10,20 L4,20 C3.44771525,20 3,19.5522847 3,19 L3,16 Z" fill="#000000" opacity="0.3" />
                                    <path d="M16,3 L19,3 C20.1045695,3 21,3.8954305 21,5 L21,15.2485298 C21,15.7329761 20.8241635,16.200956 20.5051534,16.565539 L17.8762883,19.5699562 C17.6944473,19.7777745 17.378566,19.7988332 17.1707477,19.6169922 C17.1540423,19.602375 17.1383289,19.5866616 17.1237117,19.5699562 L14.4948466,16.565539 C14.1758365,16.200956 14,15.7329761 14,15.2485298 L14,5 C14,3.8954305 14.8954305,3 16,3 Z" fill="#000000" />
                                </g>
                            </svg>
                            <!--end::Svg Icon-->
                        </span>Export
                    </button>
                    <!--begin::Dropdown Menu-->
                    <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                        <!--begin::Navigation-->
                        <ul class="navi flex-column navi-hover py-2">
                            <li class="navi-header font-weight-bolder text-uppercase font-size-sm text-primary pb-2">Choose an option:</li>
                            <li class="navi-item">
                                <a href="#" class="navi-link" onclick="$('.buttons-print').click();">
                                    <span class="navi-icon">
                                        <i class="la la-print"></i>
                                    </span>
                                    <span class="navi-text">Print</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link" onclick="$('.buttons-copy').click();">
                                    <span class="navi-icon">
                                        <i class="la la-copy"></i>
                                    </span>
                                    <span class="navi-text">Copy</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link" onclick="$('.buttons-excel').click();">
                                    <span class="navi-icon">
                                        <i class="la la-file-excel-o"></i>
                                    </span>
                                    <span class="navi-text">Excel</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link" onclick="$('.buttons-csv').click();">
                                    <span class="navi-icon">
                                        <i class="la la-file-text-o"></i>
                                    </span>
                                    <span class="navi-text">CSV</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link" onclick="$('.buttons-pdf').click();">
                                    <span class="navi-icon">
                                        <i class="la la-file-pdf-o"></i>
                                    </span>
                                    <span class="navi-text">PDF</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <div class="col-lg-2 col-md-9 col-sm-12">
                    <div class="input-group date">
                        <input type="text" class="form-control" name="FromDate" id="datepicker_1" value="@System.DateTime.Now.AddDays(-1).Date.ToString("MM-dd-yyyy")" placeholder="from date" readonly />
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="la la-calendar"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.FromDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-2 col-md-9 col-sm-12">
                    <div class="input-group date">
                        <input type="text" class="form-control" name="ToDate" id="datepicker_2" value="@System.DateTime.Now.Date.ToString("MM-dd-yyyy")" placeholder="from date" readonly />
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="la la-calendar"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.ToDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-2 col-md-9 col-sm-12">
                    <div class="input-group">
                        <select name="TransactionType" class="form-control">
                            <option value="">--All Transaction Type--</option>
                            <option value="BE">Balance Enquiry</option>
                            <option value="CW">Cash Withdrawal</option>
                            <option value="MS">Mini Statement</option>
                            <option value="AP">Aadhar Pay</option>
                        </select>
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="la la-tag"></i>
                            </span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.TransactionType, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-2 col-md-9 col-sm-12">
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="la la-phone"></i>
                            </span>
                        </div>
                        @Html.TextBoxFor(m => m.SenderMobileNumber, new { @class = "form-control", placeholder = "Mobile Number", @autocomplete = "off", autofocus = "autofocus" })
                    </div>
                    @Html.ValidationMessageFor(m => m.SenderMobileNumber, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-2 col-md-9 col-sm-12">
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="la la-address-card"></i>
                            </span>
                        </div>
                        @Html.TextBoxFor(m => m.AadharNumber, new { @class = "form-control", placeholder = "Aadhar Number" })
                    </div>
                    @Html.ValidationMessageFor(m => m.AadharNumber, "", new { @class = "text-danger" })
                </div>


                <div class="col-lg-2 col-md-9 col-sm-12">
                    <button type="submit" class="btn btn-primary mr-2">View Report</button>
                </div>
            </div>
        </div>
    </div>
</form>
@{
    var listReport = (List<PayInc_Customer_web.Areas.Reports.Models.AEPSTransactionRes>)ViewBag.AEPSTransactionReport;
}
<div class="mt-2">
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-responsive" id="tbl_aepstxn_report">
                <thead>
                    <tr>
                        <td>Req Id</td>
                        <td>Merchant TrnxId</td>
                        <td>Consumer Number</td>
                        <td>Aadhar Number</td>
                        <td>Amount</td>
                        <td>TransType</td>
                        <td>Date</td>
                        <td>Status</td>
                        <td>Bank RRN</td>
                        <td>Balance Amount</td>
                        <td>Remark</td>
                        <td>Trnx Id</td>
                        <td>Opening Bal</td>
                        <td>Closing Bal</td>
                        <td>Vendor Message</td>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.AEPSTransactionReport != null)
                    {
                        foreach (var item in listReport)
                        {
                            <tr>
                                <td>@item.aepsRequestId</td>
                                <td>@item.merchantTransactionId</td>
                                <td>@item.customerNumber</td>
                                <td>@item.adhaarNumber</td>
                                <td>₹ @item.transactionAmount</td>
                                <td>@item.transactionType</td>
                                <td>@item.requestDate</td>
                                <td>@item.transactionStatusDescription</td>
                                <td>@item.bankRrn</td>
                                <td>@item.balanceAmount</td>
                                <td>@item.requestRemarks</td>
                                <td>@item.transactionId</td>
                                <td>₹ @item.customeropBal</td>
                                <td>₹ @item.customerclBal</td>
                                <td>@item.vendorMessage</td>
                            </tr>
                        }
                    }
                    <tr>
                        <td colspan="8">
                            <div class="d-flex-in justify-content-between">
                                <span class="text-center text-dark">@ViewData["ErrorMessage"]</span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .dataTables_length {
        display: none;
    }

    .dt-buttons {
        display: none;
    }
</style>
<script>
    var arrows = {
        leftArrow: '<i class="la la-angle-left"></i>',
        rightArrow: '<i class="la la-angle-right"></i>'
    }
    $('#datepicker_1').datepicker({
        todayHighlight: true,
        orientation: "bottom left",
        format: 'mm-dd-yyyy',
        templates: arrows,
        autoclose: true,
    });
    $('#datepicker_2').datepicker({
        todayHighlight: true,
        orientation: "bottom left",
        format: 'mm-dd-yyyy',
        templates: arrows,
        autoclose: true,
    });
</script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
<script>
    $('#tbl_aepstxn_report').DataTable({
        responsive: true,
        dom: 'Bfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5',
            'print'
        ]
    });
</script>

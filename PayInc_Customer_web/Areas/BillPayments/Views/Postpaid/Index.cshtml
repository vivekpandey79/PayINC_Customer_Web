            <div class="modal-header">
                <h5 class="modal-title">PIN Password for recharge</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body d-flex flex-center">
                <div id="loginpin" style="max-width:80%"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                <button type="button" class="btn btn-primary font-weight-bolder text-uppercase" id="btn_step3">Recharge Now</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/prepaid_wizard_script.js"></script>
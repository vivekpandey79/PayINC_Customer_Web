@model PayInc_Customer_web.Areas.KIT_Management.Models.ServiceAllocationInput

<form method="post" action="@Url.Action("AllocateService","ServiceAllocation")">
    <div class="modal-header">
        <h4 class="modal-title">Service allocation</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.stockTypeId)
        <div class="form-group">
            <label>Service Type</label>
            @Html.TextBoxFor(m => m.stockType, "", new { @class = "form-control form-control-solid disabled", PlaceHolder = "Stock Type", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.stockType, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Amount<span class="text-muted">Amount to be deducted from wallet.</span></label>
            @Html.TextBoxFor(m => m.amount, "", new { @class = "form-control form-control-solid disabled", PlaceHolder = "Price", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.amount, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn btn-success" value="Purchase Now">
        <input type="button" class="btn btn-warning" data-dismiss="modal" value="Close">

    </div>
</form>
<partial name="_ValidationScriptsPartial">
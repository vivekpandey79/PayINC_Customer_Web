
@{
    ViewData["Title"] = "Allocate Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-custom">
    <form class="form">
        <div class="card-body">
            <h3 class="font-size-lg text-dark font-weight-bold mb-6">Mobile Number</h3>
            <div class="mb-15">
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Mobile</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" placeholder="Enter Mobile Number" />
                        <span class="form-text text-muted">Please enter mobile Number</span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Stocks:</label>
                    <div class="col-lg-6">
                        <select class="form-control">
                            <option>-- Select stock code --</option>
                            <option value="1">DSAFLKAI87978SADF</option>
                            <option value="2">DSAFLKAI87978SADF</option>
                            <option value="3">DSAFLKAI87978SADF</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label">Number of stock</label>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" placeholder="Enter Number of stock" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <button type="reset" class="btn btn-success mr-2">Submit</button>
                    <button type="reset" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </div>
    </form>
</div>




